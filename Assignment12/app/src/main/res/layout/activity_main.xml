<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:layout_margin="46dp"
    tools:context=".MainActivity">

    <!-- Display -->
    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/display_background_color"
        android:gravity="end|center_vertical"
        android:text="0"
        android:textColor="@color/button_text_color"
        android:textSize="48sp" />

    <!-- Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="4dp">

        <Button
            android:id="@+id/button_clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/function_color"
            android:text="C"
            android:textColor="@color/function_text_color"
            android:textSize="24sp"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/button_plus_minus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/function_color"
            android:text="+/-"
            android:textColor="@color/function_text_color"
            android:textSize="24sp"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/button_percentage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/function_color"
            android:text="%"
            android:textColor="@color/function_text_color"
            android:textSize="24sp"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/button_divide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/operator_color"
            android:text="/"
            android:textColor="@color/operator_text_color"
            android:textSize="24sp"
            android:layout_margin="4dp" />
    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="4dp">

        <Button
            android:id="@+id/button_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:text="7"
            android:textColor="@color/button_text_color"
            android:textSize="24sp"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/button_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:text="8"
            android:textColor="@color/button_text_color"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:text="9"
            android:textColor="@color/button_text_color"
            android:textSize="24sp"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/button_multiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/operator_color"
            android:text="*"
            android:textColor="@color/operator_text_color"
            android:textSize="24sp"
            android:layout_margin="4dp" />
    </LinearLayout>

    <!-- Row 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="4dp">

        <Button
            android:id="@+id/button_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:text="4"
            android:textColor="@color/button_text_color"
            android:textSize="24sp"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/button_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:text="5"
            android:textColor="@color/button_text_color"
            android:textSize="24sp"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/button_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:text="6"
            android:textColor="@color/button_text_color"
            android:textSize="24sp"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/button_minus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/operator_color"
            android:text="-"
            android:textColor="@color/operator_text_color"
            android:textSize="24sp"
            android:layout_margin="4dp" />
    </LinearLayout>

    <!-- Row 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="4dp">

        <Button
            android:id="@+id/button_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:text="1"
            android:textColor="@color/button_text_color"
            android:textSize="24sp"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:text="2"
            android:textColor="@color/button_text_color"
            android:textSize="24sp"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:text="3"
            android:textColor="@color/button_text_color"
            android:textSize="24sp"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/button_plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/operator_color"
            android:text="+"
            android:textColor="@color/operator_text_color"
            android:textSize="24sp"
            android:layout_margin="4dp" />
    </LinearLayout>

    <!-- Row 5 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="4dp">

        <Button
            android:id="@+id/button_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/button_color"
            android:text="0"
            android:textColor="@color/button_text_color"
            android:textSize="24sp"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/button_dot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:text="."
            android:textColor="@color/button_text_color"
            android:textSize="24sp"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/button_equals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/operator_color"
            android:text="="
            android:textColor="@color/operator_text_color"
            android:textSize="24sp"
            android:layout_margin="4dp" />
    </LinearLayout>

</LinearLayout>
